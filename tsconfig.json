{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "preserveConstEnums": true,
        "rootDir": "src/",
        "outDir": "dist/",
        "experimentalDecorators": true,
        "newLine": "LF",
        "noUnusedParameters": false,
        "noUnusedLocals": true,
        "importHelpers": true,
        "pretty": true,
        "removeComments": true,
        "sourceMap": true,
        "noImplicitThis": true,
        "strict": true
    },
    "include": [
        "./src/*.ts"
    ]
}